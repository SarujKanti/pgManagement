<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/appBar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="@color/btn_background"
            app:layout_constraintTop_toTopOf="parent"
            
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ivMore"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/padding_10dp"
                android:src="@drawable/baseline_density_medium_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="@dimen/_24ssp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="376dp"
                android:src="@drawable/baseline_more_vert"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.533" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_below="@+id/appBar"
            android:layout_height="match_parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView2nd"
            android:layout_width="match_parent"
            android:layout_below="@+id/appBar"
            android:visibility="gone"
            android:background="@color/little_gray"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvAddMore"
            android:fontFamily="@font/inter_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:background="@color/little_gray"
            android:layout_below="@+id/recyclerView2nd"
            android:text="@string/txt_add_more"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/color_blue"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/llCardDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@+id/tvAddMore"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvStaff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_100sdp"
                android:elevation="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/total_staff"
                        android:textSize="@dimen/_16ssp"
                        android:fontFamily="@font/inter_500"
                        android:textColor="@color/selected_tab_background"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvStaffCount"
                        android:layout_width="match_parent"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:layout_height="wrap_content"
                        android:gravity="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvStudents"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_100sdp"
                android:elevation="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/total_tenant"
                        android:textSize="@dimen/_16ssp"
                        android:fontFamily="@font/inter_500"
                        android:textColor="@color/selected_tab_background"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvStudentCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:gravity="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <TextView
            android:id="@+id/txtEmpty"
            android:fontFamily="@font/inter_500"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/lbl_no_data_found"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:visibility="gone" />

    </RelativeLayout>
</layout>